@model SalesOrdersProject.Models.Customer

@{
    ViewBag.Title = "Register User";
}

@using (Html.BeginForm("Register", "Register"))
{
    @Html.ValidationSummary()

    <h2>Register</h2>

    <div class="form-group">
        <label>First Name</label>
        @Html.TextBoxFor(x => x.CustomerFirstName, new { placeholder = "First Name", @class = "form-control inputbox" })
        <label>Last Name</label>
        @Html.TextBoxFor(x => x.CustomerLastName, new { placeholder = "Last Name", @class = "form-control inputbox" })
    </div>

    <div class="form-group">
        <label>Address</label>
        @Html.TextBoxFor(x => x.CustomerStreetAddress, new { placeholder = "755 Parr Road", @class = "form-control inputbox" })
    </div>

    <div class="form-group">
        <label>City</label>
        @Html.TextBoxFor(x => x.CustomerCity, new { placeholder = "Wentzville", @class = "form-control inputbox" })
    </div>

    <div class="form-group">
        <label>State (2 Letter Abbreviation)</label>
        @Html.TextBoxFor(x => x.CustomerState, new { placeholder = "MO", @class = "form-control inputbox" })
    </div>

    <div class="form-group">
        <label>Postal Code</label>
        @Html.TextBoxFor(x => x.CustomerZipCode, new { placeholder = "63385", @class = "form-control inputbox" })
    </div>

    <div class="form-group">
            <label>Email Address (Used as User Name)</label>
            @Html.TextBoxFor(x => x.CustomerEmailAddress, new { placeholder = "Email Address", @class = "form-control inputbox" })
        </div>

        @*<div class="form-group">
            <label>Password</label>
            @Html.PasswordFor(x => x.CustomerPassword, new { @class = "form-control" })
        </div>*@

    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Register" />
    </div>
}
